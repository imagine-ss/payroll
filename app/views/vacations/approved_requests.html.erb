<h1>Approved Requests</h1>

<% if @approved_requests.size > 0 %>
  <div class="white-bg-card">
    <% @approved_requests.each do |vacation| %>
      <%= render vacation %>
      <p>
        <%= link_to "Show this leave", vacation %>
        <hr>
      </p>
    <% end %>
  </div>
<% else %>
  <h4>There are no approved leave requests at the moment</h4>
  <%= link_to "View Requests", vacations_path %>
<% end %>
