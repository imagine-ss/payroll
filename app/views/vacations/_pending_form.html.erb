<%= form_with(model: vacation) do |form| %>
  <% if vacation.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(vacation.errors.count, "error") %> prohibited this vacation from being saved:</h2>

      <ul>
        <% vacation.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :start_date, style: "display: block", class: "form-label" %>
    <%= form.datetime_field :start_date, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :end_date, style: "display: block", class: "form-label" %>
    <%= form.datetime_field :end_date, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :vacation_days, style: "display: block", class: "form-label" %>
    <%= form.number_field :vacation_days, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :reason, style: "display: block", class: "form-label" %>
    <%= form.text_area :reason, class: "form-control" %>
  </div>
  <br>

  <%= form.label :status, class: "form-label" %>
  <div class="form-check">
    <%= form.radio_button :status, "pending", class: "form-check-input" %>
    <%= form.label "Pending", class: "form-check-label" %>
  </div>
  <div class="form-check">
    <%= form.radio_button :status, "approved", class: "form-check-input" %>
    <%= form.label "Approved", class: "form-check-label" %>
  </div>
  <div class="form-check">
    <%= form.radio_button :status, "cancelled", class: "form-check-input" %>
    <%= form.label "Cancelled", class: "form-check-label" %>
  </div>
  <br>

  <div>
    <%= form.submit "Edit Leave", class:"btn btn-primary" %>
  </div>
<% end %>
