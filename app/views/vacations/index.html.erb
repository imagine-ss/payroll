<h1>Leaves Requested</h1>

<p style="color: green"><%= notice %></p>

<% if @vacations.size > 0 %>
  <div id="vacations" class="white-bg-card">
    <% @vacations.order(created_at: :desc).each do |vacation| %>
      <%= render vacation %>
      <p>
        <%= link_to "Show this leave", vacation %>
        <hr>
      </p>
    <% end %>
  </div>
<% else %>
  <h4>No leave(s) requested. Please request one below.</h4>
<% end %>
<br>
<%= link_to "New Leave", new_vacation_path, class: "btn btn-primary" %>
