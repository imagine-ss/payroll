<section class="white-bg-card">
  <%= form_with model: @transaction, url: new_transaction_path do |f| %>

    <div class="mb-3">
      <%= f.label :amount, class: "form-label" %>
      <%= f.number_field :amount, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :description, class: "form-label" %>
      <%= f.text_field :description, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label "User ID", class: "form-label" %>
      <%= f.text_field :user_id, class: "form-control" %>
    </div>

    <div class="actions">
      <%= f.submit "Make Payment", class: "btn btn-primary" %>
    </div>
  <% end %>
  <br>
</section>
<br>
