<br>
<section class="admin-dashboard">
  <section class="admin-dashboard-users">
    <h4>All Users</h4>
      <div class="white-bg-card">
        <% @users.order(created_at: :desc).each do |user| %>
          <% full_name = user.first_name.capitalize + " " + user.last_name.capitalize %>
          <% if user.id != current_user.id && current_user.role != "admin" %>
            <%= link_to full_name, user_path(user) %><br>
          <% end %>
        <% end %>
      </div>
      <br>
      <%= link_to "New User", new_user_path, class: "btn btn-primary" %>
  </section>
  <br>
  <br>
  <section class="admin-dashboard-transactions">
    <h4>All Transactions</h4>
      <% if @transactions.size > 0 %>
        <div class="white-bg-card">
          <% @transactions.each do |t| %>
            <%= link_to t.description, transaction_path(t) %><br>
          <% end %>
        </div>
      <% else %>
        <h4>No transactions at the moment</h4>
      <% end %>
      <br>
      <%= link_to "New Transaction", new_transaction_path, class: "btn btn-primary" %>
  </section>
</section>